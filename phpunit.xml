<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <filter>
        <whitelist>
            <directory suffix=".php">lib</directory>
            <exclude>
                <directory suffix=".php">appinfo</directory>
                <directory suffix=".php">templates</directory>
            </exclude>
        </whitelist>
    </filter>
<testsuites>
    <testsuite name="unit">
        <directory>./tests/Unit</directory>
    </testsuite>
</testsuites>
</phpunit>
